/* pages/recommentsong.wxss */
/* 歌曲推荐 */
.recommentbox{
  width: 100%;
  height: 100%;
}
/* 头部 */
.heard {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.heard image{
  width: 100%;
  height: 100%;
}
.date{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%);
  color: #fff;
}

/* 主体 */
.mainsong{
  position: relative;
  top: -20rpx;
  width: 100%;
  border-radius: 30rpx 30rpx 0 0;
  background-color:#fff;
}
.mainheard{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  /* background-color: #fff; */
}
.mainheard text{
  margin: 0 20rpx;
  font-weight: 700;
}
/* 歌曲区 */
.mainsongbox{
  height: calc(100vh - 360rpx);
}
.mainsongbox view{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  width: 100%;
  padding: 10rpx 0;
}
.mainsongbox view image{
  height: 80rpx;
  width: 100rpx;
  margin: 10rpx 20rpx;
  border-radius: 10rpx;
}
.mainsongbox .maintext{
  display: flex;
  flex-direction: column;
  justify-content: start;
  padding: 20rpx 0;
  font-size: 26rpx;
  max-width: 400rpx;
  /* background-color: red; */
  box-sizing: border-box;
}
.mainsongbox .maintext text{
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.icon-gengduo{
  width: 100rpx;
  text-align: center;
  margin-right: 30rpx;
  line-height: 100rpx;
}